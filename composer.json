{
    "name": "axelbrn/slim-router-annotations",
    "description": "A simple router for Slim applications",
    "version": "0.0.1",
    "type": "library",
    "license": "MIT",
    "bin": "bin/generate-routes",
    "authors": [
        {
            "name": "Axel Brionne",
            "email": "axel.brionne@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "RouterAnnotations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.99",
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpmd/phpmd" : "@stable",
        "slim/slim": "^4.9",
        "slim/psr7": "^1.5",
        "phpunit/phpunit": "^9"
    },
    "config": {
        "platform": {
            "php": "8.0"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse src -l 8",
        "phpmd": "phpmd src json codesize,cleancode,controversial,design,naming,unusedcode",
        "format": "php-cs-fixer fix src",
        "tests": "phpunit tests"
    }
}
